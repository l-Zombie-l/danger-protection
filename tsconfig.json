{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "es5", 
        "es6",
        "es2017",
        "dom",
        "dom.iterable"
      ],
      "esModuleInterop": true,
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "include": [
        "src/**/*",
      ],
      "exclude": [
        "node_modules",
        "dist"
      ]
  }